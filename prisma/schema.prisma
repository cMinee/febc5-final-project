generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(auto()) @map("_id")
  email    String   @unique
  password String
  name     String?
  progress Progress[]
}

model Progress {
  id           String   @id @default(auto()) @map("_id")
  userId       String
  courseId     Int
  subSectionId Int
  completedAt  DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id])
}